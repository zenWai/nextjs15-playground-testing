{
  "name": "nextjs15-playground-testing",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nop",
    "build": "next build",
    "start": "next start",
    "server:start": "node server.js",
    "build:start": "next build && next start",
    "server:build:start": "concurrently \"npm run server:start\" \"npm run build:start\"",
    "lint": "next lint",
    "clean:onMAC": "rm -rf .next && npm run server:build:start",
    "clean:onWindows": "rmdir /s /q .next && npm run server:build:start",
    "prettier:check": "npx prettier . --check",
    "prettier:write": "npx prettier . --write"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "express": "^4.19.2",
    "next": "^14.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.19",
    "eslint-config-next": "^14.2.4",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.4",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
